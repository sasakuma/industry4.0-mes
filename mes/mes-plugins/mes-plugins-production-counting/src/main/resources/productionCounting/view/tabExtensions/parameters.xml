<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
                    xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
                    plugin="basic" view="parameters">

    <windowTab name="productionCounting" reference="productionCounting">
        <component type="gridLayout" name="gridLayout" reference="gridLayout"
                   columns="3" rows="6">
            <layoutElement column="1" row="1">
                <component type="select" name="typeOfProductionRecording"
                           reference="typeOfProductionRecording" field="#{form}.typeOfProductionRecording"
                           default="02cumulated" hasDescription="true">
                    <option type="labelWidth" value="60"/>
                </component>
            </layoutElement>
            <layoutElement column="1" row="2">
                <component type="checkbox" name="registerQuantityInProduct"
                           reference="registerQuantityInProduct" field="#{form}.registerQuantityInProduct">
                    <option type="labelWidth" value="60"/>
                </component>
            </layoutElement>
            <layoutElement column="1" row="3">
                <component type="checkbox" name="registerQuantityOutProduct"
                           reference="registerQuantityOutProduct" field="#{form}.registerQuantityOutProduct">
                    <option type="labelWidth" value="60"/>
                </component>
            </layoutElement>
            <layoutElement column="1" row="4">
                <component type="checkbox" name="registerProductionTime"
                           reference="registerProductionTime" field="#{form}.registerProductionTime">
                    <listener event="onChange"
                              class="com.qcadoo.mes.productionCounting.hooks.ParametersHooksPC"
                              method="checkIfRegisterProductionTimeIsSet"/>
                    <option type="labelWidth" value="60"/>
                </component>
            </layoutElement>
            <layoutElement column="1" row="5">
                <component type="checkbox" name="registerPiecework"
                           reference="registerPiecework" field="#{form}.registerPiecework">
                    <option type="labelWidth" value="60"/>
                </component>
            </layoutElement>
            <layoutElement column="1" row="6">
                <component type="checkbox" name="allowAnomalyCreationOnAcceptanceRecord"
                           reference="allowAnomalyCreationOnAcceptanceRecord"
                           field="#{form}.allowAnomalyCreationOnAcceptanceRecord"
                           hasDescription="true">
                    <option type="labelWidth" value="60"/>
                </component>
            </layoutElement>
            <layoutElement column="2" row="1">
                <component type="checkbox" name="justOne" reference="justOne"
                           field="#{form}.justOne">
                    <option type="labelWidth" value="80"/>
                </component>
            </layoutElement>
            <layoutElement column="2" row="3">
                <component type="checkbox" name="allowToClose" reference="allowToClose"
                           field="#{form}.allowToClose" hasDescription="true">
                    <option type="labelWidth" value="80"/>
                </component>
            </layoutElement>
            <layoutElement column="2" row="5">
                <component type="checkbox" name="autoCloseOrder"
                           reference="autoCloseOrder" field="#{form}.autoCloseOrder"
                           hasDescription="true">
                    <option type="labelWidth" value="80"/>
                </component>
            </layoutElement>
            <layoutElement column="2" row="6">
                <component type="checkbox" name="autoRecalculateOrder"
                           reference="autoRecalculateOrder" field="#{form}.autoRecalculateOrder"
                           hasDescription="true">
                    <option type="labelWidth" value="80"/>
                </component>
            </layoutElement>
            <layoutElement column="3" row="1">
                <component type="checkbox" name="validateProductionRecordTimes" hasDescription="true"
                           reference="validateProductionRecordTimes" field="#{form}.validateProductionRecordTimes">
                    <option type="labelWidth" value="80"/>
                </component>
            </layoutElement>
            <layoutElement column="3" row="2">
                <component type="checkbox" name="allowMultipleRegisteringTimeForWorker"
                           reference="allowMultipleRegisteringTimeForWorker"
                           field="#{form}.allowMultipleRegisteringTimeForWorker">
                    <option type="labelWidth" value="80"/>
                </component>
            </layoutElement>
            <layoutElement column="3" row="3">
                <component type="checkbox" name="consumptionOfRawMaterialsBasedOnStandards"
                           reference="consumptionOfRawMaterialsBasedOnStandards"
                           field="#{form}.consumptionOfRawMaterialsBasedOnStandards">

                    <option type="labelWidth" value="80"/>
                </component>
            </layoutElement>
            <layoutElement column="3" row="4">
                <component type="checkbox" name="calculateAmountTimeEmployeesOnAcceptanceRecord"
                           reference="calculateAmountTimeEmployeesOnAcceptanceRecord"
                           field="#{form}.calculateAmountTimeEmployeesOnAcceptanceRecord">

                    <option type="labelWidth" value="80"/>
                </component>
            </layoutElement>

        </component>
    </windowTab>
    <windowTab name="productionBalance" reference="productionBalance">
        <component type="gridLayout" name="gridLayoutBalance"
                   reference="gridLayoutBalance" columns="3" rows="3">
            <layoutElement column="1" row="1">
                <component type="gridLayout" name="productionBalanceGridLayout"
                           reference="productionBalanceGridLayout" columns="1" rows="4">
                    <layoutElement column="1" row="1" height="3">
                        <component type="borderLayout" name="parametersBorderLayout">
                            <component type="gridLayout" name="parametersGidLayout"
                                       columns="1" rows="4">
                                <layoutElement column="1" row="1">
                                    <component type="select" name="sourceOfOperationCostsPB"
                                               reference="sourceOfOperationCostsPB"
                                               field="#{form}.sourceOfOperationCostsPB"
                                               hasDescription="true">
                                        <option type="labelWidth" value="40"/>
                                        <listener event="onSelectedEntityChange"
                                                  class="com.qcadoo.mes.productionCounting.hooks.ParameterPBDetailsViewHooks"
                                                  method="onSourceOfOperationCostsChange"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="1" row="2">
                                    <component type="checkbox" name="includeTPZPB"
                                               field="#{form}.includeTPZPB" reference="includeTPZPB">
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="1" row="3">
                                    <component type="checkbox" name="includeAdditionalTimePB"
                                               field="#{form}.includeAdditionalTimePB"
                                               reference="includeAdditionalTimePB">
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>

                                <layoutElement column="1" row="4">
                                    <component type="checkbox" name="includeWageGroups"
                                               field="#{form}.includeWageGroups" reference="includeWageGroups"
                                               hasDescription="true">
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                            </component>

                            <option type="label" value="parameters"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="4">
                        <component type="select" name="priceBasedOn" reference="priceBasedOn"
                                   field="#{form}.priceBasedOn">
                            <option type="labelWidth" value="40"/>
                        </component>
                    </layoutElement>
                </component>
            </layoutElement>

            <layoutElement column="2" row="1">
                <component type="gridLayout" name="inputDataForCostsGridLayout"
                           reference="inputDataForCostsGridLayout" columns="1" rows="4">
                    <layoutElement column="1" row="1" height="2">
                        <component type="borderLayout" name="parametersBorderLayout"
                                   reference="parametersBorderLayout">
                            <component type="gridLayout" name="parametersGridLayout"
                                       reference="parametersGridLayout" columns="1" rows="2">
                                <layoutElement column="1" row="1">
                                    <component type="select" name="sourceOfMaterialCostsPB"
                                               field="#{form}.sourceOfMaterialCostsPB"
                                               reference="sourceOfMaterialCostsPB">
                                        <option type="labelWidth" value="40"/>
                                        <listener event="onSelectedEntityChange"
                                                  class="com.qcadoo.mes.productionCounting.hooks.ParameterPBDetailsViewHooks"
                                                  method="onSourceOfMaterialCostsChange"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="1" row="2">
                                    <component type="select" name="calculateMaterialCostsModePB"
                                               field="#{form}.calculateMaterialCostsModePB"
                                               reference="calculateMaterialCostsModePB">
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                            </component>

                            <option type="label" value="parameters"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="3" height="2">
                        <component type="borderLayout" name="assumptionsBorderLayout"
                                   reference="assumptionsBorderLayout">
                            <component type="gridLayout" name="assumptionsGridLayout"
                                       reference="assumptionsGridLayout" columns="6" rows="2"
                                       hasBorders="false">
                                <layoutElement column="1" row="1" width="5">
                                    <component type="input" name="averageMachineHourlyCostPB"
                                               field="#{form}.averageMachineHourlyCostPB"
                                               reference="averageMachineHourlyCostPB">
                                        <option type="alignment" value="right"/>
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="6" row="1">
                                    <component type="input" name="averageMachineHourlyCostPBCurrency"
                                               reference="averageMachineHourlyCostPBCurrency" defaultEnabled="false"
                                               hasLabel="false">
                                        <option type="textRepresentationOnDisabled" value="true"/>
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="1" row="2" width="5">
                                    <component type="input" name="averageLaborHourlyCostPB"
                                               field="#{form}.averageLaborHourlyCostPB"
                                               reference="averageLaborHourlyCostPB">
                                        <option type="alignment" value="right"/>
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="6" row="2">
                                    <component type="input" name="averageLaborHourlyCostPBCurrency"
                                               reference="averageLaborHourlyCostPBCurrency" defaultEnabled="false"
                                               hasLabel="false">
                                        <option type="textRepresentationOnDisabled" value="true"/>
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                            </component>

                            <option type="label" value="assumptions"/>
                        </component>
                    </layoutElement>

                </component>
            </layoutElement>

            <layoutElement column="3" row="1">
                <component type="gridLayout" name="overheadsOuterGridLayout"
                           reference="overheadsOuterGridLayout" columns="1" rows="2">
                    <layoutElement column="1" row="1">
                        <component type="borderLayout" name="overheadsBorderLayout"
                                   reference="overheadsBorderLayout">
                            <component type="gridLayout" name="overheadsGridLayout"
                                       reference="overheadsGridLayout" columns="4" rows="3" hasBorders="false">
                                <layoutElement column="1" row="1" width="3">
                                    <component type="input" name="productionCostMarginPB"
                                               field="#{form}.productionCostMarginPB"
                                               reference="productionCostMarginPB">
                                        <option type="alignment" value="right"/>
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="4" row="1">
                                    <component type="input" name="productionCostMarginPBProc"
                                               reference="productionCostMarginPBProc" defaultEnabled="false"
                                               hasLabel="false">
                                        <option type="textRepresentationOnDisabled" value="true"/>
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="1" row="2" width="3">
                                    <component type="input" name="materialCostMarginPB"
                                               field="#{form}.materialCostMarginPB" reference="materialCostMarginPB">
                                        <option type="alignment" value="right"/>
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="4" row="2">
                                    <component type="input" name="materialCostMarginPBProc"
                                               reference="materialCostMarginPBProc" defaultEnabled="false"
                                               hasLabel="false">
                                        <option type="textRepresentationOnDisabled" value="true"/>
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="1" row="3" width="3">
                                    <component type="input" name="additionalOverheadPB"
                                               field="#{form}.additionalOverheadPB" reference="additionalOverheadPB">
                                        <option type="alignment" value="right"/>
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="4" row="3">
                                    <component type="input" name="additionalOverheadPBCurrency"
                                               reference="additionalOverheadPBCurrency" defaultEnabled="false"
                                               hasLabel="false">
                                        <option type="textRepresentationOnDisabled" value="true"/>
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                            </component>

                            <option type="label" value="overheads"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="2">
                        <component type="borderLayout" name="borderLayoutSellPriceOverheads"
                                   reference="borderLayoutSellPriceOverheads">
                            <option type="label" value="sellPriceOverheads"/>
                            <component type="gridLayout" name="sellPriceOverheads"
                                       reference="sellPriceOverheads" columns="4" rows="2" hasBorders="false">
                                <layoutElement column="1" row="1" width="3">
                                    <component type="input" name="registrationPriceOverheadPB"
                                               field="#{form}.registrationPriceOverheadPB"
                                               reference="registrationPriceOverheadPB">
                                        <option type="labelWidth" value="40"/>
                                        <option type="alignment" value="right"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="4" row="1">
                                    <component type="input" name="registrationPriceOverheadPBProc"
                                               defaultEnabled="false" hasLabel="false"
                                               reference="registrationPriceOverheadPBProc">
                                        <option type="textRepresentationOnDisabled" value="true"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="1" row="2" width="3">
                                    <component type="input" name="profitPB"
                                               field="#{form}.profitPB" reference="profitPB">
                                        <option type="labelWidth" value="40"/>
                                        <option type="alignment" value="right"/>
                                    </component>
                                </layoutElement>
                                <layoutElement column="4" row="2">
                                    <component type="input" name="profitPBProc"
                                               defaultEnabled="false" hasLabel="false" reference="profitPBProc">
                                        <option type="textRepresentationOnDisabled" value="true"/>
                                        <option type="labelWidth" value="40"/>
                                    </component>
                                </layoutElement>
                            </component>
                        </component>
                    </layoutElement>
                </component>
            </layoutElement>
        </component>
    </windowTab>
</windowTabExtension>
